<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? %>
      <%= link_to "ASMobi:工数管理システム", current_user, id: "logo" %>
    <% else %>
      <%= link_to "ASMobi:工数管理システム", root_path, id: "logo" %>
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "ホーム", current_user %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              メニュー <b class="caret"></b>
            </a>
            <% if current_user.admin? %>
              <%= render 'layouts/admin_dropdown' %>
            <% else %>
              <%= render 'layouts/nonadmin_dropdown' %>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to "ホーム",   root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>