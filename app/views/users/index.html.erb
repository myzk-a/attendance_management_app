<% provide(:title, 'ユーザー一覧') %>
<h1>ユーザー一覧</h1>

<%= will_paginate %>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ユーザー名</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">編集</th>
      <th scope="col">削除</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
     <tr>
       <td><%= link_to user.name, user %></td>
       <td><%= user.email %></td>
       <td><%= link_to "編集", edit_user_path(user) %></td>
       <% if user.admin? %>
         <td>-</td>
       <% else %>
         <td><%= link_to "削除", user, method: :delete, data: { confirm: "削除しますか？"} %></td>
       <% end %>
     </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>