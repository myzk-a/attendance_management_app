<%= form_for(@work, url: url) do |f| %>
  <%= render 'shared/error_messages', { input: @work } %>

  <%= f.label :start_time %><br>
  <%= f.datetime_select :start_time, { default: @date, discard_year: false, discard_month: false, discard_date: false, minute_step: 15}, 
                                       class: "form-control form_date_select" %><br>

  <%= f.label :end_time %><br>
  <%= f.datetime_select :end_time, { default: @date, discard_year: false, discard_month: false, discard_date: false, minute_step: 15}, 
                                       class: "form-control form_date_select" %><br>

  <%= f.label :project_id %>
  <%= f.collection_select :project_id, Project.all, :id, :name, {include_blank: "選択してください"}, class: 'form-control' %>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, placeholder: "業務内容を登録してください。" %>
  </div>

  <%= f.submit btn_comment, class: "btn btn-primary" %>
<% end %>