<% provide(:title, '登録内容の編集') %>
<h1>登録内容の編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@holiday, url: "/holidays/#{@holiday.id}/edit") do |f| %>
      <%= render 'shared/error_messages', {input: @holiday} %>

      <%= f.label :name, "休日名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :date, "日付" %>
      <%= f.date_field :date, class: 'form-control' %>

      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>