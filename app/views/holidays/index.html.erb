<% provide(:title, '休日一覧') %>
<h1>休日一覧</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 search_holidays">
    <%= form_with(scope: :search, url: holidays_path, method: :get, local: true) do |f| %>

      <%= f.hidden_field :searching, value: true %>

      <span class="work_time"><%= "対象年 : "%></span>
      <%= f.select :year, @years, {include_blank: "選択して下さい"}, class: "form_date_select" %>

      <%= f.submit "検索", class: "btn btn-primary form_date_select" %>
    <% end %>
  </div>
</div>

<% unless @holidays.blank? %>
  <h2>検索結果</h2>
  <%= render 'search_result' %>
<% end %>