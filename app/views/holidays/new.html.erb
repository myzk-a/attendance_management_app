<% provide(:title, '休日登録') %>
<h1>休日登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@holiday, url: holidays_signup_path) do |f| %>
      <%= render 'shared/error_messages', {input: @holiday} %>

      <%= f.label :name, "休日名" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :date, "日付" %>
      <%= f.date_field :date, class: 'form-control' %>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>