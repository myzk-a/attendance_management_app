<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">開始時間</th>
      <th scope="col">終了時間</th>
      <th scope="col">プロジェクト名</th>
      <th scope="col">プロジェクトコード</th>
      <th scope="col">業務内容</th>
      <% unless current_user.admin? %>
        <th scope="col">編集</th>
        <th scope="col">削除</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @works.each do |work| %>
     <tr>
       <% project = Project.find_by(id: work.project_id) %>
       <td><%= work.start_time %></td>
       <td><%= work.end_time %></td>
       <td><%= project.name %></td>
       <td><%= project.code %></td>
       <td><%= work.content %></td>
       <% unless current_user.admin? %>
         <td><%= link_to "編集", "#" %></td>
         <td><%= link_to "削除", "#" %></td>
       <% end %>
     </tr>
    <% end %>
  </tbody>
</table>